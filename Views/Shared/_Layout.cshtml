<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Formula1</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Formula1.styles.css" asp-append-version="true" />

   
    <link rel="stylesheet" href="~/css/estilo-f1.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" id="navbar-f1">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    Formula 1
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">

                    
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Pilotos" asp-action="Index">Pilotos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Equipes" asp-action="Index">Equipes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Pistas" asp-action="Index">Pistas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Temporadas" asp-action="Index">Temporadas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="ResultadoCorridas" asp-action="Index">
                                Resultados
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="PontuacaoPiloto" asp-action="Index">
                                Pontuação piloto
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="PontuacaoEquipe" asp-action="Index">
                                Pontuação Equipe
                            </a>
                        </li>


                    </ul>

                    
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Formula1 -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
