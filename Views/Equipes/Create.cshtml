@model Formula1.Models.Equipe

@{
    ViewData["Title"] = "Cadastrar Equipe";
}

<div class="container">

    
    <div class="header">
        <a class="brand" href="@Url.Action("Index", "Home")">
            <span class="logo"></span>
            Formula 1 - Administração
        </a>
    </div>

    <div class="card">
        <h2 style="margin-top:0;">Cadastrar Nova Equipe</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_equipe"></label>
                <input asp-for="Nome_equipe" class="form-control" />
                <span asp-validation-for="Nome_equipe" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:15px;">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
